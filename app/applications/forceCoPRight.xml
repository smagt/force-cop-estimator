		<display></display>
		<stdio></stdio>
		<dependencies>
		  <port timeout="5.0">/icub/skin/right_hand_comp</port>
		</dependencies>
	</module>

<module>
		<name>force-cop-estimator</name>
		<parameters>--from icubRightLittle_combined.ini</parameters>
