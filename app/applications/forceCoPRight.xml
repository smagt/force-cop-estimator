		<display></display>
		<stdio></stdio>
		<dependencies>
		  <port timeout="5.0">/icub/skin/right_hand_comp</port>
		</dependencies>
	</module>

        <module>
		<name>yarpscope</name>
		<parameters>--context force-cop-estimator --xml forceTaxel_rightIndex.xml --title "Index Finger"</parameters>
		<node>localhost</node>
