<application>
	<!-- yarpmanager file for the object surface exploration experiments -->
	<name> forceCoPEstimation </name>
	<description> Force CoP Estimation </description>
	<version> 0.0 </version>

	<authors>
		<author email="nawid.jamali@iit.it"> Nawid Jamali </author>
	</authors>

	<!-- Required modules -->
	<module>
		<name>forceCoPEstimation</name>
		<parameters>--context forceCoPEstimation</parameters>
		<node>localhost</node>
		<display></display>
		<stdio></stdio>
		<dependencies>
		  <port timeout="5.0">/icubSim/skin/left_hand_comp</port>
		</dependencies>
	</module>
  
	<module>
	  <name>play-tactile-data</name>
	  <parameters></parameters>
	  <node></node>
	  <display>visible</display>
	  <stdio></stdio>
	</module>
  
	<connection>
	  <from> /icubSim/skin/left_hand_comp </from>
	  <to> /tempForceCoPEstimation </to>
	  <protocol> tcp </protocol>
	</connection>
	
	
	<!--<connection> 
		<from>/cam/right</from> 
		<to>/view/right</to> 
		<protocol>udp</protocol> 
	</connection> -->

</application>
