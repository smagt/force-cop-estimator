<application>
	<!-- yarpmanager file for the object surface exploration experiments -->
	<name> Surface Exploration ForceCoP </name>
	<description> Surface Exploration ForceCoP </description>
	<version> 0.0 </version>

	<authors>
		<author email="nawid.jamali@iit.it"> Nawid Jamali </author>
	</authors>

	<!-- Required modules -->
	<module>
		<name>force-cop-estimator</name>
		<parameters>--from icubLeftIndex_combined.ini</parameters>
		<node>localhost</node>
		<display></display>
		<stdio></stdio>
		<dependencies>
		  <port timeout="5.0">/icub/skin/left_hand_comp</port>
		</dependencies>
	</module>
  
	<module>
		<name>force-cop-estimator</name>
		<parameters>--from icubLeftMiddle_combined.ini</parameters>
		<node>localhost</node>
		<display></display>
		<stdio></stdio>
		<dependencies>
		  <port timeout="5.0">/icub/skin/left_hand_comp</port>
		</dependencies>
	</module>

        <module>
		<name>yarpscope</name>
		<parameters>--context force-cop-estimator --xml forceTaxel_icubLeftIndex.xml</parameters>
		<node>localhost</node>
		<dependencies>
		  <port timeout="5.0">/force-cop-estimator/left_index/force:o</port>
		</dependencies>

        </module>
	
	<module>
		<name>yarpscope</name>
		<parameters>--context force-cop-estimator --xml forceTaxel_icubLeftMiddle.xml</parameters>
		<node>localhost</node>
		<dependencies>
		  <port timeout="5.0">/force-cop-estimator/left_middle/force:o</port>
		</dependencies>
        </module>

</application>
